{% capture link_handle %}{{ link.title | handle }}{% endcapture %}
{% capture linkurl %}{{ link.url }}{% endcapture %} 
{% capture child_list_handle %}{{ link.title | handleize }}{% endcapture %}
{% if link.title == settings.megadropdown_link %}

  <ul class="megamenu">
    <div class="mega-container">
      {% if settings.nav_promo_image %}
      <span class="col-sm-3 tablet-hide mm-image">
        <a href="{{ settings.nav_promo_link }}">
          <img src="{{ 'catalog.jpeg' | asset_url }}">
        </a>
      </span>
      {% endif %} 
      <span class="col-sm-9 {% if settings.nav_promo_image %}desktop-9{% else %}desktop-12{% endif %} tablet-6">
        {% assign mega = 0 %}
        {% if settings.mega_1_show %}{% assign mega = mega | plus: 1 %}{% endif %}
        {% if settings.mega_2_show %}{% assign mega = mega | plus: 1 %}{% endif %}
        {% if settings.mega_3_show %}{% assign mega = mega | plus: 1 %}{% endif %}
        {% if settings.mega_4_show %}{% assign mega = mega | plus: 1 %}{% endif %}

        {% if mega > 0 %}    
        <!-- Start Megamenu Inner Links -->
        {% if settings.mega_1_show %}            
        <li class="col-sm-3 desktop-{{ 12 | divided_by: mega }}"><h4>{{ linklists[settings.mega_1_links].title }}</h4>
          <ul class="mega-stack">
            {% for link in linklists[settings.mega_1_links].links %}
            <li>{{ link.title | link_to: link.url }}</li>
            {% endfor %}
          </ul>
        </li>
        {% endif %}
        {% if settings.mega_2_show %}            
        <li class="col-sm-3 desktop-{{ 12 | divided_by: mega }}"><h4>{{ linklists[settings.mega_2_links].title }}</h4>
          <ul class="mega-stack">
            {% for link in linklists[settings.mega_2_links].links %}
            <li>{{ link.title | link_to: link.url }}</li>
            {% endfor %}
          </ul>
        </li>
        {% endif %}
        {% if settings.mega_3_show %}            
        <li class="col-sm-3 desktop-{{ 12 | divided_by: mega }}"><h4>{{ linklists[settings.mega_3_links].title }}</h4>
          <ul class="mega-stack">
            {% for link in linklists[settings.mega_3_links].links%}
            <li>{{ link.title | link_to: link.url }}</li>
            {% endfor %}
          </ul>
        </li>
        {% endif %}
        {% if settings.mega_4_show %}            
        <li class="col-sm-3 desktop-{{ 12 | divided_by: mega }}"><h4>{{ linklists[settings.mega_4_links].title }}</h4>
          <ul class="mega-stack">
            {% for link in linklists[settings.mega_4_links].links %}
            <li>{{ link.title | link_to: link.url }}</li>
            {% endfor %}
          </ul>
        </li> 
        {% endif %}    
        {% endif %}  
      </span>
    </div>
  </ul>

{% endif %}