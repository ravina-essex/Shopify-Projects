{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}
<div class="favorites">
  {% comment %} {% if template == 'blog' or template == 'index' %}
  {% for collection in collections %}
  {% if collection.handle == 'favorites' %}
  <h4>{% comment %}ly_code_replace_for_[ collection.title ]_begin{% endcomment %}{% include 'ly-title' with collection %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</h4>
  {% endif %}
  {% endfor %}
  {% for product in collections.favorites.products limit:3 %}
  {% include 'product-favorites' %}
  {% endfor %}
  {% else %}
  {% for collection in collections %}
  {% if collection.handle == 'shop' %}
  <h4>{% comment %}ly_code_replace_for_[ collection.title ]_begin{% endcomment %}{% include 'ly-title' with collection %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</h4>
  {% endif %}
  {% endfor %}
  {% for product in collections.shop.products limit:4 %}
  {% include 'product-favorites' %}
  {% endfor %}
  {% endif %}
  {% endcomment %}
  <h4>{% comment %}ly_new_settings_replace_for_[ settings.blog_title ]_begin{% endcomment %}{% assign language = cart.attributes["language"] %}{% if language == nil %}{% assign language = shop.metafields["languages"]["default"] %}{% endif %}{% assign namespace = language | append: "as" %}{% if shop.metafields[namespace]["id2585617"] %}{% assign ly_translation = shop.metafields[namespace]["id2585617"] %}{% else %}{% assign ly_translation = settings.blog_title %}{% endif %}{{ ly_translation }}{% comment %}ly_new_settings_replace_end{% endcomment %}</h4>
  {% include 'blog-home' %}
</div>
<div class="clear"></div>
<hr class="pre-line">
<div class="pre_launch">
  <a href="/pages/celebrating-pre-launch"><img src="{{ 'Banner-klein.jpg' | asset_url }}"></a>
</div>
<div class="hppy_customer">
  <h4><ly-as-2585616>HAPPY CUSTOMERS</ly-as-2585616></h4>
  <div id="instafeed" class="product-grid">
    {% for i in (1..4) %}
      {% capture happy_customer %}happy_{{ i }}{% endcapture %}
      {% capture happy_customer_img %}happy_{{ i }}.jpg{% endcapture %}
      {% if settings[happy_customer] %}
    <div class="item">
      <a class="img_insta" href="/pages/happy-customer" target="_blank">
        <div class="border_prdt">
         {% comment %}ly_asset_replace_for_[ happy_customer_img | asset_url | img_tag: settings[slide_alt] ]_begin{% endcomment %}{% assign ly_asset = happy_customer_img %}{% include 'ly-asset' with ly_asset %}{{ ly_translation | img_tag: image_alt }}{% comment %}ly_asset_replace_end{% endcomment %}
           </div>
      </a>
    </div>    
      {% endif %}
      {% endfor %}
  </div>
</div>
<div class="clear"></div>
<h4>{% comment %}ly_i18n_replace_for_[ 'blogs.sidebar.recent_articles' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'blogs.sidebar.recent_articles' | t }}{% endcapture %}{% include 'ly-static-string' with '2585618' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</h4>
<ul>
  {% for article in blogs['launching-bloggers-favorites'].articles limit:5 %}
  <li class="blog-post">
    <a href="{{ article.url }}">{% comment %}ly_code_replace_for_[ article.title ]_begin{% endcomment %}{% include 'ly-title' with article %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</a>
    {% comment %}
    <br>
    <time pubdate datetime="{{ article.published_at | date: '%Y-%m-%d' }}">
      <em class="text-light">{{ article.published_at | date: format: 'month_day_year' }}</em>
    </time>
    {% endcomment %}
  </li>
  {% endfor %}
</ul>
