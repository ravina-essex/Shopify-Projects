<div class="col-sm-4">
  {% capture collection_title %}{{ collection.title | escape }}{% endcapture %}
  <div class="imghvr">
  <a href="{{ collection.url }}" title="{{ 'collections.general.link_title' | t: title: collection_title }}">
    {% if collection.image %}
    {{ collection.image.src | img_url: 'large' | img_tag: collection_title }}
    {% else %}
    {{ collection.products.first.featured_image | img_url: 'large' | img_tag: collection_title }}
    {% endif %}
  </a>
</div>
  <div class="des">
    <h4>
      <a href="{{ collection.url }}" title="{{ 'collections.general.link_title' | t: title: collection_title }}">
        {{ collection.title }}</a>
      {% comment %}
      <small>({{ 'collections.general.items_with_count' | t: count: collection.all_products_count }})</small>
      {% endcomment %}
    </h4>
    
    <div class="colle_des">
      {{ collection.description }}
    </div>
    <div class="shop_btn">
      <a class="btn hvr-sweep-to-right" title="Shop Now" href="{{ collections[featured].url }}">
        Shop Now
        <span class="arrow">arrow</span>
      </a>
    </div>
  </div>
</div>
